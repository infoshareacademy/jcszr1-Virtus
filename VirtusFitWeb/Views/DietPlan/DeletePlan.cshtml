@model BLL.DietPlan

@{
    ViewData["Title"] = "Delete Plan";
}

<h1>Delete Plan</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Diet Plan &#8470; @Model.PlanNo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlanNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlanNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        @if (@Model.Duration.Days == 1)
        {
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Duration.Days) Day
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duration.Days) Days
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CaloriesPerDay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaloriesPerDay)
        </dd>
    </dl>
    
    <form asp-action="DeletePlan" asp-controller="DietPlan" method="post">
        <input type="submit" value="Delete" class="col-sm-2 btn btn-danger btn-block"/>
        <a class="col-sm-2 btn btn-info btn-block" asp-action="Index" asp-controller="DietPlan">Back to List</a>
    </form>
    
</div>
