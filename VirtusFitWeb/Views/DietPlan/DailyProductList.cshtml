@model DailyProductListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Product List - Diet Plan &#8470; @Model.DailyPlanId (@Model.CaloriesPerDay Calories/Day) | Day &#8470; @Model.DayNumber</h1>
@if (Model.ProductListForDay.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    &#8470;
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductListForDay[0].PortionSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductListForDay[0].NumberOfPortions)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductListForDay[0].TotalCalories)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductListForDay)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrdinalNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PortionSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfPortions)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.TotalCalories)
                    </th>
                    <td>
                        @Html.ActionLink("Edit", "EditProductInPlan", new { id = Model.DailyPlanId, daynumber = Model.DayNumber, ordinalNumber = item.OrdinalNumber }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Product }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Product })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductListForDay[0].Product.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductListForDay[0].PortionSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductListForDay[0].NumberOfPortions)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    There are no products on list. Add products.
                </td>
            </tr>
        </tbody>
    </table>
}
<p>
    <a asp-action="ProductsToAdd" asp-route-id="@Model.DailyPlanId" asp-route-dayNumber="@Model.DayNumber">Add product</a>
</p>