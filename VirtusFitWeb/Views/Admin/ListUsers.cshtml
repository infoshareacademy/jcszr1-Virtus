@model List<Microsoft.AspNetCore.Identity.IdentityUser>;

@{
    ViewData["Title"] = "Administration Panel";
    Layout = "_AdminLayout";
    var ordNumber = 0;
}

<h1>Users List</h1>

<table class="table">
    <thead>
    <tr>
        <th></th>
        <th>
            User Email
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            ordNumber++;
            <tr>
                <td>
                    @ordNumber
                </td>
                <td>
                    @item.Email
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-info" asp-action="Index" asp-controller="Admin">Back</a>
</div>

