@model VirtusFitWeb.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Administration Panel";
    Layout = "_AdminLayout";
}

<h1>Delete User</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">User Email</label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Remove User" class="btn btn-primary btn-block" />
            </div>
            <div>
                <a class="btn btn-info btn-block" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}