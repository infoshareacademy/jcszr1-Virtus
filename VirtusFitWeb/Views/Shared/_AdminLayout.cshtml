<!DOCTYPE html>
<html lang="en">
<style>
    .bg-admin {
        background-color: rgb(48, 161, 95)
    }
    .nav-title {
        width: 100%;
        font-size: 24px;
    }
</style>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - VirtusFitWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="~/css/dietPlan.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <div id="topheader">
            <nav class="navbar navbar-expand-sm navbar-dark bg-admin border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/logo9.png" width="125" height="125" /></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex">
                        <div class="navbar-nav nav mr-auto">
                            <span class="navbar-text nav-title">Virtus Fit</span>
                            <span class="navbar-text">Force yourself to eat healthy.</span>
                        </div>
                        <ul class="navbar-nav nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Back to App</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Users</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="ListUsers">User List</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="ChangePassword">Password Change</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="BlockUser">Block/Unblock User</a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="DeleteUser">Remove User</a>
                                </div>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "BMICalculator" ? "active" : "")" 
                               asp-area="" asp-controller="Reports" asp-action="">Reports</a>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $('#topheader .navbar-nav a').on('click',
            function () {
                $('#topheader .navbar-nav').find('li.active').removeClass('active');
                $(this).parent('li').addClass('active');
            });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
