@model BLL.Product
@using VirtusFitWeb.Controllers;

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete @Model.ProductName from favorites?</h3>

<div>
    <form asp-action="DeleteFromFavorites" asp-controller="Favorite" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="FavoriteList" asp-controller="Favorite">Back to List</a>
    </form>
</div>
